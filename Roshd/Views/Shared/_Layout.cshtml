<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    
    <style type="text/css">
        body {
            background-color: #ffb7ab;
            background-image: url(../../Images/BackGround.png);
        }

        .footer {
            height: 50px;
            position: fixed;
            right: 0;
            bottom: 0;
            left: 0;
            background-color: #d2d2d2;
            text-align: center;
        }
 
    </style>


</head>
<body>
    <div class="row" style="direction: rtl;">
        <div class="header" style=" margin: 0px auto">
        </div>
    </div>

    <div class="navbar navbar-default" style="font-family: 'B Arabic Style' 'B Titr'; background-color: #ec6f5c; height: 10px; margin: 0px">
        <div class="container" style="width:100% !important">


            <div id="PersonalDetails" hidden="hidden" style="z-index:50">
                <nav>
                    <ul>
                        <li>
                            <div class="button add" style="cursor: pointer;  border-radius: 30px;">
                                <span>@Session["UserName"]</span>
                                <span id="Profile">
                                    <img src="~/Images/ProfileAction.png" width="40" />
                                </span>

                            </div>
                            <div class="dialog" style="display:none;padding:20px">
                                <form method="post">
                                    <p style="color:#000790;font-weight:bold">نام و نام خانوادگی </p><p style="color:white;font-weight:bold">@Session["UserName"]</p>
                                    <br />
                                    <p style="color: #000790; font-weight: bold">کد پرسنلی/کد ملی</p><p style="color:white;font-weight:bold">@Session["NationalCode"]</p>
                                    <br />
                                    <p style="color: #000790; font-weight: bold">نقش </p><p style="color:white;font-weight:bold">@Session["RoleTitle"]</p>


                                </form>
                            </div>
                        </li>
                        <li>
                            <a style="color:black !important" href="../../Messages/MessagePage">
                                <i style="cursor:pointer; font-size: 20px;margin-top: 40%;" class="fa fa-envelope-o"></i>
                                <span id="MessageCount" class="badgeIN" style="display:none"> </span>
                            </a>

                        </li>
                    </ul>

                </nav>
            </div>
            <div style=" float: left; margin-top: -3%;"><img src="../../Images/???????.jpg" alt="شرکت فناوران سپهر فرداد" width="100" height="20" /></div>

        </div>
    </div>

    <div class="navbar navbar-default" style="font-family: 'B Arabic Style' 'B Titr'; background-color: #ec6f5c; height: 50px;">
        <div class="container">
            <div class="navbar-header">
                <button class="navbar-toggle" type="button" data-toggle="collapse" data-target="#navbar-main">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse" id="navbar-main" style="margin-top: 20px;">

            </div>
        </div>
    </div>
    @RenderBody()
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>


<script type="text/javascript">
   

</script>